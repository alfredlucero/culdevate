    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["dom", "es2017"],
    "strict": true,
    "outDir": "./dist/",
    "skipLibCheck": true
