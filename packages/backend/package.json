{
  "name": "culdevate-backend",
  "version": "1.0.0",
  "description": "backend RESTAPI for culdevate",
  "main": "index.js",
  "scripts": {
    "setup": "npm ci",
    "build": "tsc",
    "start": "ts-node ./src/server.ts",
    "mongodb:mac": "mkdir mongo-db; mongod --dbpath mongo-db",
    "mongodb:windows": "md mongo-db & \"C:/Program Files/MongoDb/Server/3.2/bin/mongod.exe\" --dbpath mongo-db",
    "dev": "cross-env NODE_ENV=development CONFIG_ENV=dev nodemon",
    "staging": "cross-env NODE_ENV=production CONFIG_ENV=staging nodemon",
    "production": "cross-env NODE_ENV=production CONFIG_ENV=production npm run build && nodemon",
    "test": "jest",
    "lint": "tsc --noEmit && eslint --fix './src/**/*.{js,ts}'",
    "precommit": "tsc --noEmit && lint-staged"
  },
  "engines": {
    "node": "12.x"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint . --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run start",
    "ext": "ts"
  },
  "keywords": [
    "culdevate-backend",
    "backend",
    "webapi"
  ],
  "author": "alfienitylucero",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.7",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.0.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/hapi__joi": "^16.0.1",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/mongoose": "^5.5.23",
    "@types/morgan": "^1.7.37",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "cross-env": "^7.0.2",
    "dotenv": "^8.0.0",
    "envalid": "^5.0.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.4.2",
    "mongodb-memory-server": "^5.2.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2"
  }
}
